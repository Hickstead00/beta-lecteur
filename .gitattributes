# Auto detect text files and perform LF normalization by default
* text=auto eol=lf

# Force LF for specific file types
*.java text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.properties text eol=lf
*.md text eol=lf
*.json text eol=lf

# Force CRLF for Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Unix shell scripts should use LF
*.sh text eol=lf
mvnw text eol=lf

/mvnw text eol=lf
*.cmd text eol=crlf
